@model Vidly.Models.Movie
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>

<ul>
    <li>Genre : @Model.Genre.Name</li>
    <li>Release Date : @Model.ReleaseDate.DayOfWeek , @Model.ReleaseDate.Month , @Model.ReleaseDate.Year</li>
    <li>Date Added : @Model.AddedDate.DayOfWeek , @Model.AddedDate.Month , @Model.AddedDate.Year</li>
    <li>Number In Stock : @Model.NumberInStock</li>
</ul>

