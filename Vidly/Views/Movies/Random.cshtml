@model List<Vidly.Models.Movie>
@{
    ViewBag.Title = "Random";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<table class="table table-hover table-primary" style="width: 100%">
    <tr>
        <th>Movie Name</th>
    </tr>
    <td>
        @if (!Model.Any())
        {
            <h3>We don't have any movies yet.</h3>
        }
        @foreach (var movie in Model)
        {
            <li>@movie.Name</li>
        }
    </td>

</table>